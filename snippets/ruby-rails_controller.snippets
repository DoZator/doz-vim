# Actionpack controller

snippet respond_to
	respond_to do |format|
		format.html
		format.json { render json: ${1:variables}}
	end
snippet wants
	wants.${1:js|json|xml|html}${2}
snippet flash
	flash[:${1:notice}] = ${2}
snippet bf
	before_filter ${1:method}
snippet bfo
	before_filter ${1:method}, :only => [${2:methods}]
snippet bfe
	before_filter ${1:method}, :except => [${2:methods}]

